{% extends 'base.html.twig' %}

{% block title %}Catalogue Manga{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Catalogue Manga</h1>
        <p class="text-gray-600">{{ total }} mangas disponibles</p>
    </div>

    {# Filtres et recherche #}
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
        {# Filtre alphabétique #}
        <div class="mb-6">
            <h2 class="text-lg font-semibold mb-3">Filtrer par lettre</h2>
            <div class="flex flex-wrap gap-2">
                <a href="{{ path('app_manga_list') }}" 
                   class="px-3 py-1 {% if not letter %}bg-blue-600 text-white{% else %}bg-gray-100 text-gray-700{% endif %} rounded-full hover:bg-blue-500 hover:text-white transition-colors">
                    Tous
                </a>
                {% for char in alphabet %}
                    <a href="{{ path('app_manga_list', {letter: char}) }}" 
                       class="px-3 py-1 {% if letter == char %}bg-blue-600 text-white{% else %}bg-gray-100 text-gray-700{% endif %} rounded-full hover:bg-blue-500 hover:text-white transition-colors">
                        {{ char }}
                    </a>
                {% endfor %}
            </div>
        </div>

        {# Barre de recherche et tri #}
        <form method="GET" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {# Recherche #}
                <div class="col-span-2">
                    <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Rechercher</label>
                    <div class="relative">
                        <input type="text" 
                               id="search" 
                               name="search" 
                               value="{{ search }}" 
                               placeholder="Rechercher un manga..."
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <button type="submit" 
                                class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-blue-500">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        </button>
                    </div>
                </div>

                {# Tri #}
                <div>
                    <label for="sort" class="block text-sm font-medium text-gray-700 mb-1">Trier par</label>
                    <select name="sort" 
                            id="sort" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            onchange="this.form.submit()">
                        <option value="title" {% if sort == 'title' %}selected{% endif %}>Titre</option>
                        <option value="year" {% if sort == 'year' %}selected{% endif %}>Année</option>
                    </select>
                </div>
            </div>
        </form>
    </div>

    {# Grille de mangas #}
    {% if mangas|length > 0 %}
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
            {% for manga in mangas %}
                <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                    <a href="{{ path('app_manga_show', {mangaDexId: manga.mangaDexId}) }}" class="block">
                        {% if manga.coverImage %}
                            <div class="aspect-w-3 aspect-h-4">
                                <img src="https://uploads.mangadex.org/covers/{{ manga.mangaDexId }}/{{ manga.coverImage }}"
                                     alt="{{ manga.title }}"
                                     class="object-cover w-full h-full"
                                     loading="lazy"
                                     referrerpolicy="no-referrer">
                            </div>
                        {% endif %}
                        <div class="p-4">
                            <h3 class="font-semibold text-gray-900 mb-1 line-clamp-2">{{ manga.title }}</h3>
                            {% if manga.year %}
                                <p class="text-sm text-gray-600">{{ manga.year }}</p>
                            {% endif %}
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>

        {# Pagination #}
        {% if maxPages > 1 %}
            <div class="mt-8 flex justify-center">
                <nav class="flex items-center space-x-2">
                    {% if currentPage > 1 %}
                        <a href="{{ path('app_manga_list', {
                            page: currentPage - 1,
                            search: search,
                            sort: sort,
                            letter: letter
                        }) }}" 
                           class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                            Précédent
                        </a>
                    {% endif %}

                    {% for i in max(1, currentPage - 2)..min(maxPages, currentPage + 2) %}
                        <a href="{{ path('app_manga_list', {
                            page: i,
                            search: search,
                            sort: sort,
                            letter: letter
                        }) }}" 
                           class="px-4 py-2 {% if currentPage == i %}bg-blue-600 text-white{% else %}bg-white text-gray-700 border border-gray-300 hover:bg-gray-50{% endif %} rounded-lg">
                            {{ i }}
                        </a>
                    {% endfor %}

                    {% if currentPage < maxPages %}
                        <a href="{{ path('app_manga_list', {
                            page: currentPage + 1,
                            search: search,
                            sort: sort,
                            letter: letter
                        }) }}" 
                           class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                            Suivant
                        </a>
                    {% endif %}
                </nav>
            </div>
        {% endif %}
    {% else %}
        <div class="text-center py-12">
            <p class="text-gray-500 text-lg">Aucun manga trouvé</p>
            <a href="{{ path('app_manga_list') }}" class="mt-4 inline-block text-blue-600 hover:underline">
                Voir tous les mangas
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
