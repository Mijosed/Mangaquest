{% extends 'base.html.twig' %}

{% block title %}{{ localManga.title }}{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row gap-8">
            <div class="w-full md:w-1/3">
                {% if localManga and localManga.coverImage %}
                    <img src="https://uploads.mangadex.org/covers/{{ localManga.mangaDexId }}/{{ localManga.coverImage }}"
                         alt="{{ localManga.title }}"
                         class="w-full rounded-lg shadow-lg"
                         referrerpolicy="no-referrer">
                {% endif %}
            </div>

            <div class="w-full md:w-2/3">
                <h1 class="text-3xl font-bold mb-4">{{ localManga.title }}</h1>
                
                {% if localManga.description %}
                    <div class="mb-6">
                        <h2 class="text-xl font-semibold mb-2">Description</h2>
                        <p>{{ localManga.description }}</p>
                    </div>
                {% endif %}

                <div class="mb-4">
                    <h2 class="text-xl font-semibold mb-2">Informations</h2>
                    <ul class="list-disc list-inside">
                        <li>Status: {{ localManga.status|capitalize }}</li>
                        <li>Année de publication: {{ localManga.year ?? 'Non spécifié' }}</li>
                        {% if manga.attributes.tags is defined and manga.attributes.tags is not empty %}
                            <li>Genres: 
                                {% for tag in manga.attributes.tags %}
                                    {{ tag.attributes.name.en ?? tag.attributes.name.ja }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </li>
                        {% endif %}
                    </ul>
                </div>

                <div class="mt-4">
                    <a href="{{ path('app_manga_list') }}" 
                       class="inline-block px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
                        Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 