{% extends 'base.html.twig' %}

{% block title %}Forum - MangaQuest{% endblock %}

{% block content %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {# En-tête du forum #}
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-4">Forum MangaQuest</h1>
            <div class="flex justify-between items-center">
                <p class="text-gray-600">Discutez de vos mangas préférés</p>
                <a href="{{ path('app_forum_new') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md">
                    Nouveau sujet
                </a>
            </div>
        </div>

        {# Liste des sujets #}
        <div class="bg-white shadow-sm rounded-lg divide-y divide-gray-200">
            {% for topic in topics %}
                <div class="p-6 hover:bg-gray-50 transition duration-150 flex space-x-4">
                    {# Image du topic #}
                    <div class="flex-shrink-0">
                        {% if topic.imageFilename %}
                            <img src="{{ asset('uploads/topics/' ~ topic.imageFilename) }}" alt="Image du topic" class="w-24 h-24 object-cover rounded-lg">
                        {% else %}
                            <img src="{{ asset('uploads/topics/defaultImage.png') }}" alt="Image par défaut" class="w-24 h-24 object-cover rounded-lg">
                        {% endif %}
                    </div>
                    {# Contenu du topic #}
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <div class="flex items-center space-x-3">
                                <img src="{{ topic.author.avatar }}" alt="Avatar" class="w-10 h-10 rounded-full">
                                <div>
                                    <a href="{{ path('app_forum_show', {id: topic.id}) }}" class="text-lg font-medium text-gray-900 hover:text-indigo-600">
                                        {{ topic.title }}
                                    </a>
                                    <p class="text-sm text-gray-500">
                                        Par {{ topic.author.username }} • {{ topic.createdAt|date('d/m/Y H:i') }}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4 text-sm text-gray-500">
                            <div class="flex items-center space-x-1">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                                {% if topic.posts|length > 0 %}
                                    <span>{{ topic.posts|length }}</span>
                                {% else %}
                                    <span>0</span>
                                {% endif %}
                            </div>
                            <div class="flex items-center space-x-1">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                                <span>{{ topic.views }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination #}
        <div class="mt-6">
            <nav class="flex items-center justify-between border-t border-gray-200 px-4 sm:px-0">
                <div class="flex w-0 flex-1">
                    {% if app.request.query.get('page', 1) > 1 %}
                        <a href="{{ path('app_forum_index', {page: app.request.query.get('page', 1) - 1}) }}" class="inline-flex items-center border-t-2 border-transparent pt-4 pr-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
                            <svg class="mr-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                            </svg>
                            Précédent
                        </a>
                    {% endif %}
                </div>
                <div class="flex w-0 flex-1 justify-end">
                    {% if topics|length >= 10 %}
                        <a href="{{ path('app_forum_index', {page: app.request.query.get('page', 1) + 1}) }}" class="inline-flex items-center border-t-2 border-transparent pt-4 pl-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
                            Suivant
                            <svg class="ml-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </a>
                    {% endif %}
                </div>
            </nav>
        </div>
    </div>
{% endblock %} 