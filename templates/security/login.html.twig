{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
    <!-- Flash messages for errors -->
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <!-- Form Title -->
    <h1 class="text-2xl font-bold text-center text-red-600 mb-6">Connexion</h1>

    <!-- Login Form -->
    <form action="{{ path('app_login') }}" method="POST" class="space-y-4">
        <!-- Email Field -->
        <div>
            <label for="email" class="block text-gray-700 font-medium">Email</label>
            <input id="email" name="_username" type="email" required class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring focus:ring-red-300" placeholder="Email" value="{{ last_username }}">
        </div>

        <!-- Password Field -->
        <div>
            <label for="password" class="block text-gray-700 font-medium">Mot de passe</label>
            <input id="password" name="_password" type="password" required class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring focus:ring-red-300" placeholder="Mot de passe">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <!-- Submit Button -->
        <div>
            <button type="submit" class="w-full bg-red-600 text-white py-3 px-4 rounded hover:bg-red-700 transition">
                Se connecter
            </button>
        </div>
    </form>
</div>
{% endblock %}
