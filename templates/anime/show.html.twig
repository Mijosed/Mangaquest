{% extends 'base.html.twig' %}

{% block title %}{{ anime.title }}{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row gap-8">
            <div class="md:w-1/3">
                <img src="{{ anime.posterImage }}" 
                     alt="{{ anime.title }}" 
                     class="w-full rounded-lg shadow-lg">
            </div>
            
            <div class="md:w-2/3">
                <h1 class="text-4xl font-bold mb-4">{{ anime.title }}</h1>
                
                <div class="mb-6">
                    <h2 class="text-xl font-semibold mb-2">Description</h2>
                    <p class="text-gray-700">{{ anime.description }}</p>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <h3 class="font-semibold">Studio</h3>
                        <p>{{ anime.studio }}</p>
                    </div>
                    
                    <div>
                        <h3 class="font-semibold">Ã‰pisodes</h3>
                        <p>{{ anime.episodes }}</p>
                    </div>
                    
                    <div>
                        <h3 class="font-semibold">Genre</h3>
                        <p>{{ anime.genre }}</p>
                    </div>
                    
                    <div>
                        <h3 class="font-semibold">Date de sortie</h3>
                        <p>{{ anime.releaseDate|date('d/m/Y') }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 